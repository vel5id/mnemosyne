# ============================================================
# Mnemosyne Core V3.0 - Environment Variables
# ============================================================
# Copy this file to .env and customize values
# ============================================================

# ===========================================================
# Database
# ===========================================================
MNEMOSYNE_DB_PATH=.mnemosyne/activity.db
MNEMOSYNE_DATA_DIR=./.mnemosyne

# ===========================================================
# Obsidian Integration
# ===========================================================
OBSIDIAN_VAULT_PATH=
OBSIDIAN_DAILY_NOTE_FOLDER=Mnemosyne/Logs

# ===========================================================
# VRAM Guard (for VLM processing)
# ===========================================================
VRAM_FREE_THRESHOLD_MB=4096

# ===========================================================
# Processing Settings
# ===========================================================
BATCH_SIZE=100
POLL_INTERVAL_SECONDS=5

# ===========================================================
# Logging
# ===========================================================
LOG_LEVEL=INFO

# ===========================================================
# VLM Configuration (Vision Language Model)
# ===========================================================
# Backend: "ollama" (Docker) or "local" (HuggingFace)
VLM_BACKEND=ollama

# Model selection: "minicpm-v" (lighter, faster) or "qwen2.5-vl:7b" (better OCR)
VLM_MODEL=minicpm-v

# ===========================================================
# LLM Configuration (Reasoning Model)
# ===========================================================
# Heavy model: Used for complex reasoning tasks
LLM_MODEL_HEAVY=deepseek-r1:1.5b

# Light model: Fallback for high-load situations
LLM_MODEL_LIGHT=phi3:mini

# ===========================================================
# Security (Optional - SQLCipher)
# ===========================================================
# Uncomment and set key for database encryption
# DB_ENCRYPTION_KEY=your-secret-key-here

# ===========================================================
# Docker-specific settings
# ===========================================================
NVIDIA_VISIBLE_DEVICES=0
COMPOSE_PROJECT_NAME=mnemosyne

# Dashboard
DASHBOARD_PORT=11433
